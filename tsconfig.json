{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./src/"]
    }
  },
  "include": ["src"]
}
